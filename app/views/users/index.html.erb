<div class="container">
    <div class="card card-login mx-auto mt-5">
     <div class="card-header">Users</div>
      <div class="card-body">

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Creation date</th>
      <th>Creation time</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>


 <tbody>
<% @users.each do |user| %>
<tr>
<td> <%= user.first_name %> </td>

<td> <%= user.middle_name %> </td>
<td> <%= user.last_name %> </td>
<td> <%= user.email %> </td>
<td> <%= user.phone_number %> </td>
<td><%= user.created_at.strftime("%d %b %y") %></td>
<td><%= user.created_at.strftime("%H:%M") %></td>
 </tr>
<%- end %>
</tbody>
</table>

       </div>
     </div>
     
   </div>
       